<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextHighlight">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextTitle">
        <item name="android:layout_margin">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextTitleWithHighlight" parent="TextTitle">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextSubtitle">
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextSubtitleWithHighlight" parent="TextSubtitle">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="MaterialTheme" parent="android:Theme.Material">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
